.card-container {
	position: relative;
	display: flex;
	height: 240rpx;
	border-radius: 12rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	background-color: #fff;
	margin: 6rpx 12rpx;
	z-index: 999;
	overflow: hidden;
}

.card-info {
	display: flex;
	flex-direction: column;
	flex: 1;
	padding: 24rpx;
	position: relative;
	min-width: 0;
}

.header-container {
	display: flex;
	flex-direction: column;
	gap: 6rpx;
	margin-bottom: 48rpx;
}

.card-image {
	height:auto;
	width: 225rpx;
	border-radius: 12rpx 0 0 12rpx;
	object-fit: cover;
}

.card-title-container {
	display: flex;
	align-items: center;
	min-width: 0;
}

.card-title {
	font-size: 24rpx;
	font-weight: bold;
	margin-right: 12rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	max-width: 40%;
}

.tag-container {
	display: flex;
	flex-wrap: nowrap;
	align-items: center;
	overflow: hidden;
	flex-shrink: 1;
}

.tag {
	background-color: #FFD700;
	color: #000000;
	padding: 2rpx 6rpx;
	border-radius: 4rpx;
	margin-right: 12rpx;
	font-size: 16rpx;
	white-space: nowrap;
}

.collect-icon {
	height: 32rpx;
	width: 32rpx;
	padding: 4rpx;
	margin-left: auto;
	flex-shrink: 0;
}

.service-container {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
}

.service {
	background-color: #f0f0f0;
	color: #333;
	padding: 2rpx 6rpx;
	border-radius: 4rpx;
	font-size: 16rpx;
	margin-bottom: 4rpx;
}

.card-recommendation {
	font-size: 18rpx;
	color: #3a3a3a;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}

.footer-container {
	position: absolute;
	bottom: 24rpx;
	left: 24rpx;
	right: 24rpx;
	display: flex;
	flex-direction: column;
	gap: 4rpx;
}

.address-container {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
}

.address-text {
	font-size: 16rpx;
	color: #999;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	max-width: 60%;
}

.time-text {
	font-size: 16rpx;
	color: #999;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.distance-text {
	font-size: 16rpx;
	color: #999;
	white-space: nowrap;
	flex-shrink: 0;
}

