<view class="container">

  <t-swiper
    class="main-image"
    current="{{currentImageIndex}}"
    autoplay="{{autoplay}}"
    navigation="{{navigation}}"
    paginationPosition="{{paginationPosition}}"
    list="{{spot.images}}"
  ></t-swiper>

  <!-- 图片列表 -->
  <scroll-view scroll-x="true" class="image-list-container">
    <view class="image-list">
      <block wx:for="{{spot.images}}" wx:key="index">
        <image
          src="{{item}}"
          class="list-image {{index === currentImageIndex ? 'active' : ''}}"
          bindtap="onImageClick"
          data-index="{{index}}"
        ></image>
      </block>
    </view>
  </scroll-view>

  <!-- 介绍卡片 -->
  <view class="info-card">
    <view class="shop-name">{{spot.name}}</view>
    <view class="info-item">
      <text>地址: {{spot.address}}</text>
      <button class="nav-button" bindtap="onNavigate">导航</button>
    </view>
    <view class="info-item">
      <text>开放时间: {{spot.hours}}</text>
    </view>
    <view class="info-item">
      <text>联系电话: {{spot.contact}}</text>
    </view>
  </view>

  <!-- 详细介绍 -->
  <view class="description-section">
    <view class="description-title">
      <text>店铺推荐</text>
    </view>
    <view class="description-content">
      <text>{{spot.description}}</text>
    </view>
  </view>
</view>
