<!--pages/detail/index.wxml-->
<view class="detail-container">
    <!-- 景点图片 -->
    <image class="detail-image" src="{{spot.image}}" mode="aspectFill" />

    <!-- 景点名称 -->
    <view class="detail-header">
      <text class="detail-title">{{spot.name}}</text>
    </view>

    <!-- 景点详细信息 -->
    <view class="detail-info">
      <view class="info-item">
        <text class="info-label">类型:</text>
        <text class="info-value">{{spot.type}}</text>
      </view>

      <view class="info-item">
        <text class="info-label">地址:</text>
        <text class="info-value">{{spot.address}}</text>
      </view>

      <view class="info-item">
        <text class="info-label">开放时间:</text>
        <text class="info-value">{{spot.hours}}</text>
      </view>

      <view class="info-description">
        <text>{{spot.description}}</text>
      </view>
    </view>

    <!-- 其他操作 -->
    <button class="collect-button" bindtap="onCollectToggle">
      {{collected ? '取消收藏' : '收藏'}}
    </button>
  </view>
