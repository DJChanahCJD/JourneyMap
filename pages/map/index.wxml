<view class="container">
    <top-bar></top-bar>
    <map
        subkey="{{subkey}}"
        longitude="{{longitude}}"
        latitude="{{latitude}}"
        scale="14"
        markers="{{markers}}"
        bindmarkertap="onMarkerTap"
        enable-3D="false"
        show-compass="false"
        show-scale="true"
        enable-zoom="true"
        enable-scroll="true"
        enable-rotate="false"
        enable-overlooking="true"
        style="width: 100%; height: 100vh; display: block;"
    ></map>

    <!-- Improved Bottom Navigation Bar -->
    <nav-bar></nav-bar>
</view>
