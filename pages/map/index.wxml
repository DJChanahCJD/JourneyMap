<view class="container">
    <view class="top-bar">
        <view class="logo-container">
          <image src="/resources/marker.png" class="logo"></image>
          <text class="app-name">JourneyMap</text>
        </view>
    </view>

    <map
        subkey="{{subkey}}"
        longitude="{{longitude}}"
        latitude="{{latitude}}"
        scale="14"
        markers="{{markers}}"
        bindmarkertap="onMarkerTap"
        enable-3D="false"
        show-compass="false"
        show-scale="true"
        enable-zoom="true"
        enable-scroll="true"
        enable-rotate="false"
        enable-overlooking="true"
        style="width: 100%; height: 100vh; display: block;"
    ></map>

      <!-- Improved Bottom Navigation Bar -->
    <view class="nav-bar">
        <navigator url="/pages/explore/index" open-type="switchTab" class="nav-item">
          <image src="/resources/explore-icon.png" class="nav-icon"></image>
          <text class="nav-label">探索</text>
        </navigator>
        <navigator url="/pages/map/index" open-type="switchTab" class="nav-item active">
          <image src="/resources/map-icon.png" class="nav-icon"></image>
          <text class="nav-label">地图</text>
        </navigator>
        <navigator url="/pages/my/index" open-type="switchTab" class="nav-item">
          <image src="/resources/user-icon.png" class="nav-icon"></image>
          <text class="nav-label">我的</text>
        </navigator>
    </view>
</view>
