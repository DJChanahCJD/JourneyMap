/* pages/my/index.wxss */

.my-container {
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.my-content {
  display: flex;
  flex-direction: column;
  padding: 12rpx;
  background-color: #f7f7f7;
}

/* 头部区域 */
.my-header {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 16rpx;
  margin: 4rpx 8rpx 24rpx 8rpx;
  padding: 0 12rpx;
}

/* 个人信息卡片 - 简化设计 */
.profile-header {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #f0f7ff 0%, #f5f0ff 100%);
}

.profile-avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.profile-bio {
  font-size: 22rpx;
  color: #888888;
}

.signup-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

/* 数据统计区域 */
.statistics-header {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.count-item {
  position: relative;
  padding: 18rpx 16rpx;
  border-radius: 12rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  min-height: 100rpx;
  min-width: 100rpx;
}

.city-count {
  background: linear-gradient(135deg, #fff9f0 0%, #fff5f0 100%);
}

.spot-count {
  background: linear-gradient(135deg, #f0f7ff 0%, #f5f5ff 100%);
}

.count-label {
  font-size: 22rpx;
  color: #888888;
  margin-bottom: 8rpx;
}

.count-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.count-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-right: auto;
  margin-left: auto;
}

.count-text {
  font-size: 22rpx;
  color: #888888;
  margin-left: auto;
  margin-right: auto;
}

.count-icon {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  width: 36rpx;
  height: 36rpx;
  opacity: 0.15;
}

.separator {
  height: 1rpx;
  background-color: #f0f0f0;
  margin-bottom: 8rpx;
}

.wishlist-title {
  display: flex;
  align-items: center;
  font-weight: bold;
  background-color: #FFD700;
  border-radius: 32rpx;
  margin-left: 32rpx;
  margin-bottom: 12rpx;
  padding: 0rpx 6rpx;
  border: none;
  box-shadow: 2rpx 4rpx 4rpx rgba(0, 0, 0, 0.2); /* 添加底部阴影 */
  transition: box-shadow 0.2s ease, transform 0.2s ease; /* 添加动画过渡 */
  box-sizing: border-box;
}

.wishlist-title:hover {
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.1); /* 按下时减小阴影 */
  transform: translateY(2rpx); /* 按下时按钮下移 */
}

.wishlist-text {
  font-size: 24rpx;
  color: #333333;
  margin-right: 8rpx;
  margin-bottom: -4rpx;
}

.wishlist-icon {
  display: flex;
  width: 48rpx;
  height: 48rpx;
  margin-left: 8rpx;
  margin-right: 0rpx;
  margin-bottom: 4rpx;
}
/* 心愿单 */
.wishlist {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.spot-item {
  margin: 4rpx 10rpx 10rpx 10rpx;
}
/* 弹出窗口 */
.block {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100vw;
  max-height: 80vh; /* 调整弹出窗口高度 */
  background: var(--td-bg-color-container);
  overflow: hidden;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 16rpx;
}

.btn--cancel {
  position: absolute;
  top: -6rpx;
  right: 10rpx;
  font-size: 48rpx;
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}

.form-container {
  padding: 16px;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  border-radius: 8px;
  overflow-y: auto; /* 允许内部滚动 */
  flex: 1;
}

.form-item {
  margin-bottom: 20rpx; /* 减少垂直间距 */
}

.tags-item, .upload-item {
  padding: 24rpx;
  background-color: #fff;
}

.form-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 12rpx;
}

.input-field,
.picker-field,
.checkbox-group,
.textarea-field {
  margin-bottom: 8rpx;
}

.location-button {
  margin-bottom: 8rpx; /* 减少垂直间距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.location-display {
  margin-top: 4rpx;
  font-size: 14px;
  color: #555;
}

.submit-button {
  align-self: center;
  justify-self: center;
  width: 90%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  color: #fff;
  transition: background-color 0.3s, transform 0.3s;
  z-index: 1000;
}

.location-button:hover,
.submit-button:hover {
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.1);
  transform: translateY(2rpx);
}

.card {
  position: relative;
  margin: 32rpx;
  width: 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid var(--td-bg-color-container, #fff);
}

.card--active {
  border-color: var(--td-brand-color, #0052D9);
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
  border-width: 28px 28px 28px 0;
  border-style: solid;
  border-color: #FFD700 transparent transparent transparent;
  border: 14px solid var(--td-brand-color, #0052D9);
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: var(--td-bg-color-container, #fff);
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

/* 横向布局 */
.horizontal-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 32rpx;
}

.horizontal-box .card {
  flex: 0 0 calc(33.33% - 12rpx);
  margin: 0 0 24rpx 0;
}

.horizontal-box .card::after {
  border-width: 48rpx 48rpx 48rpx 0;
}

.horizontal-box .card__icon {
  font-size: 24rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;

}

.tag-item {
  display: flex;
  margin-bottom: 16rpx;
}

.tag-item:not(:last-child){
  margin-right: 16rpx;
}
