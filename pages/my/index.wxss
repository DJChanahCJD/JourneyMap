/* pages/my/index.wxss */

.my-container {
  padding-bottom: 100rpx;
  overflow-y: auto;
}
/* 头部区域 */
.my-header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff; /* 增加背景颜色 */
  border-radius: 15rpx; /* 增加圆角 */
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1); /* 增加阴影 */
}

/* 个人信息 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.profile-avatar {
  width: 160rpx; /* 增加头像大小 */
  height: 160rpx;
  border-radius: 50%;
  border: 8rpx solid #c1f72c;
  margin-bottom: 20rpx;
}

.profile-name {
  font-size: 48rpx; /* 增加字体大小 */
  color: #333333;
  font-weight: 600; /* 增加字体权重 */
}

/* 数据统计 */
.statistics-header {
  display: flex;
  border-radius: 15rpx; /* 增加圆角 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.count-item {
  display: flex;
  align-items: center;
  padding: 10rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  height: 48rpx;
}

.city-count {
  background-color: #c1f72c;
}

.spot-count {
  background-color: #f7c82c;
}

.stat-icon {
  padding-top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.count-number {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.count-text {
  color: #666666;
}


.recommendSpotBtn-btn {
  background-color: #ff6a00;
  color: #ffffff;
  border: none;
  border-radius: 25rpx; /* 增加圆角 */
  padding: 12rpx 25rpx; /* 调整内边距 */
  font-size: 28rpx; /* 增加字体大小 */
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.plus-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 心愿单 */
.wishlist {
  display: flex;
  flex-direction: column;
  padding: 12rpx;
}

.spot-item {
  margin: 4rpx 10rpx 10rpx 10rpx;
}

.wishlist-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  padding-left: 20rpx;
  border-left: 4rpx solid #ff6a00;
}

/* 弹出窗口 */
.block {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100vw;
  max-height: 80vh; /* 调整弹出窗口高度 */
  background: var(--td-bg-color-container);
  overflow: hidden;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 16rpx;
}

.btn--cancel {
  position: absolute;
  top: -6rpx;
  right: 10rpx;
  font-size: 48rpx;
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}

.form-container {
  padding: 16px;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  border-radius: 8px;
  overflow-y: auto; /* 允许内部滚动 */
  flex: 1;
}

.form-item {
  margin-bottom: 12rpx; /* 减少垂直间距 */
}

.form-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx; /* 减少垂直间距 */
}

.input-field,
.picker-field,
.checkbox-group,
.textarea-field {
  margin-bottom: 8rpx;
}

.location-button {
  margin-bottom: 8rpx; /* 减少垂直间距 */
  transition: all 0.3s;
}

.location-button:hover {
  transform: scale(1.05);
}

.location-display {
  margin-top: 4rpx;
  font-size: 14px;
  color: #555;
}

.submit-button {
  padding: 16rpx;
  bottom: 10rpx;
  transform: scale(1.05);
  align-self: center;
  justify-self: center;
  width: 90%;
  /* --td-button-border-radius: 24rpx;
  --td-button-primary-bg-color:#FFD700;
  --td-button-primary-border-color:#FFD700;
   */
  color: #fff;
  transition: background-color 0.3s, transform 0.3s;
  z-index: 1000;
}

.submit-button:hover {
  transform: scale(1.08);
}

.card {
  position: relative;
  margin: 32rpx;
  width: 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid var(--td-bg-color-container, #fff);
}

.card--active {
  border-color: var(--td-brand-color, #0052D9);
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
  border-width: 28px 28px 28px 0;
  border-style: solid;
  border-color: #FFD700 transparent transparent transparent;
  border: 14px solid var(--td-brand-color, #0052D9);
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: var(--td-bg-color-container, #fff);
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

/* 横向布局 */
.horizontal-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 32rpx;
}

.horizontal-box .card {
  flex: 0 0 calc(33.33% - 12rpx);
  margin: 0 0 24rpx 0;
}

.horizontal-box .card::after {
  border-width: 48rpx 48rpx 48rpx 0;
}

.horizontal-box .card__icon {
  font-size: 24rpx;
}
