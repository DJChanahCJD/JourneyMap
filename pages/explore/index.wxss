/* pages/explore/index.wxss */
.explore-container {
    padding: 20rpx;
  }
  
  .explore-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
  }
  
  .picker {
    font-size: 28rpx;
    padding: 10rpx;
    background-color: #f0f0f0;
    border-radius: 10rpx;
  }
  
  .spot-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .spot-item {
    display: flex;
    background-color: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .spot-image {
    width: 150rpx;
    height: 150rpx;
  }
  
  .spot-info {
    flex: 1;
    padding: 20rpx;
  }
  
  .spot-name {
    font-size: 30rpx;
    font-weight: bold;
  }
  
  .spot-tags {
    color: #FFD700;
    margin-top: 10rpx;
  }
  
  .collect-button {
    align-self: center;
    background-color: #FFD700;
    border: none;
    padding: 10rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
  }
  